# FastAPI
PORT=8000
LOG_LEVEL=INFO

# Frontend origin for CORS
FRONTEND_ORIGIN=https://evohome-improvements-gm0u.bolt.host

# Admin credentials
ADMIN_EMAIL=you@example.com
ADMIN_PASSWORD=supersecret

# JWT secret
JWT_SECRET=replace-with-long-random-string
JWT_EXPIRES_MINUTES=120

# Rate limiting
RATE_LIMIT_POST=10/minute

# Notify email for new leads
LEAD_NOTIFY_EMAIL=office@evohomeimprovements.co.uk

# Supabase
SUPABASE_URL=https://YOUR-PROJECT.supabase.co
SUPABASE_SERVICE_KEY=YOUR_SERVICE_ROLE_KEY
SUPABASE_STORAGE_BUCKET=evohome-media

# SMTP for sending lead emails. Example uses SendGrid SMTP.
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=YOUR_SENDGRID_API_KEY
SMTP_FROM=office@evohomeimprovements.co.uk
SMTP_USE_TLS=true
